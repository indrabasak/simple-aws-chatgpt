{
    "compilerOptions": {
      "target": "es2022",
      "strict": true,
      "strictNullChecks": true,
      "strictPropertyInitialization": true,
      "preserveConstEnums": true,
      "noEmit": false,
      "module":"commonjs",
      "esModuleInterop": true, 
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true, 
      "isolatedModules": true, 
      "rootDir": "src",
      "outDir": "dist"
    },
    "exclude": ["node_modules", "**/*.test.ts"]
  }
