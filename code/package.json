{
  "name": "simple-aws-chatgpt",
  "version": "1.0.0",
  "author": "indra.basak1@gmail.com",
  "license": "ISC",
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "dist:insight": "rm -rf dist && yarn build:insight && yarn build:layer && cp global-bundle.pem dist/lambda-functions/insight",
    "dist:ignore": "rm -rf dist && yarn build:ignore && yarn build:layer && cp global-bundle.pem dist/lambda-functions/ignore",
    "build:insight": "tsc --project src/insight",
    "build:ignore": "tsc --project src/ignore",
    "build:layer": "mkdir -p dist/lambda-functions/layer/nodejs && cp package.json yarn.lock dist/lambda-functions/layer/nodejs && cd dist/lambda-functions/layer/nodejs && yarn install --prod --frozen-lockfile",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest --silent --coverage",
    "local:exceptions": "tsx src/exceptions/local.ts"
  },
  "jestSonar": {
    "reportPath": "test-reports",
    "reportFile": "jest-sonar-report.xml"
  },
  "devDependencies": {
    "@babel/core": "7",
    "@babel/preset-env": "7",
    "@babel/preset-typescript": "7",
    "@jest/globals": "^29.7.0",
    "@types/aws-lambda": "^8.10.138",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "aws-sdk-client-mock": "^4.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.4.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "tsx": "^4.19.1",
    "type-fest": "^4.23.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@aws-lambda-powertools/batch": "^2.2.0",
    "@aws-lambda-powertools/logger": "^2.1.1",
    "@aws-lambda-powertools/parameters": "^2.2.0",
    "@aws-sdk/client-secrets-manager": "^3.596.0",
    "@azure/identity": "^4.4.1",
    "@langchain/community": "^0.3.1",
    "@langchain/core": "^0.3.11",
    "@langchain/openai": "^0.3.0",
    "@langchain/textsplitters": "^0.1.0",
    "lodash": "^4.17.21",
    "mongodb": "^6.10.0"
  }
}
